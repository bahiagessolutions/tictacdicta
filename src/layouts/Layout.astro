---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import CookieConsent from "@components/CookieConsent.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.png", // CAMBIO: Asegúrate de crear esta imagen y ponerla en la carpeta `public/`
  Astro.site
).toString();

const { title } = Astro.props;

// CAMBIO: Personalizamos el título que aparece en la pestaña del navegador
const makeTitle = title
  ? title + " | " + "tictacdicta"
  : "tictacdicta - Registro Horario Digital para PYMES";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Meta Pixel Code -->
    <script is:inline>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '862776369771257');
      fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none" src="https://www.facebook.com/tr?id=862776369771257&ev=PageView&noscript=1"/></noscript>
    <!-- End Meta Pixel Code -->

    <!-- Google tag (gtag.js) - Google Ads -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17724156349" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17724156349');
    </script>

    <!-- Event snippet for Contacto conversion page (Google Ads) -->
    <script is:inline>
      function gtag_report_conversion(url) {
        var callback = function () {
          if (typeof(url) != 'undefined') {
            window.location = url;
          }
        };
        gtag('event', 'conversion', {
          'send_to': 'AW-17724156349/b9WnCKWt80bEL3TxINC',
          'event_callback': callback
        });
        return false;
      }
    </script>
    <!-- End Google Ads Conversion Event -->

    <SEO
      title={makeTitle}
     
      description="Software de registro de jornada digital para PYMES. Cumple con la ley de 2026 de forma fácil y segura. Gestiona horarios, vacaciones y personal en la nube."
      canonical={canonicalURL}
      twitter={{
        // CAMBIO: Pon aquí tu usuario de Twitter (o bórralo si no tienes)
        //creator: "@TuUsuarioDeTwitter",
        //site: "@TuUsuarioDeTwitter",
        //card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          // CAMBIO: Título para cuando se comparta en redes sociales
          title: `tictacdicta - El Registro Horario que tu PYME necesita`,
          image: resolvedImageWithDomain,
        },
        image: {
          // CAMBIO: Texto alternativo para la imagen compartida
          alt: "Ilustración del sistema de registro horario digital tictacdicta",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <CookieConsent />
    <style is:global>
      /* Mejora la velocidad de carga de imágenes */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>