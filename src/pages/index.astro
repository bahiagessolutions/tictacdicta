---
// src/pages/index.astro
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import PricingCard from "@components/pricing.astro";
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import heroImage from "assets/hero-trabajo.png";
import fichajeImage from "assets/fichaje-centralizado.png";
import instalacionImage from "assets/instalacion-soporte.png";

// --- DATOS PARA LA SECCIÓN DE PRECIOS ---
const pricing = [
  { name: "Plan Estándar", price: { monthly: "15€", annual: "150€" }, period: "/mes", popular: false, features: ["Kiosco de Fichaje","Portal del empleado","Panel administrador","Informes simples","Cumple 100% con la ley"], button: { text: "Elige Estándar", link: "https://wa.me/34613139737?text=Hola%21%20estoy%20interesado%20en%20conocer%20m%C3%A1s%20informaci%C3%B3n%20del%20Plan%20Est%C3%A1ndar."  }},
  { name: "Plan Profesional", price: { monthly: "25€", annual: "250€" }, period: "/mes", popular: true, features: ["Todo el plan Estándar","Gestión de Ausencias y Vacaciones","Calendarios Laborales","Informes Avanzados","Soporte Prioritario"], button: { text: "Elige Profesional", link: "https://wa.me/34613139737?text=Hola%21%20estoy%20interesado%20en%20conocer%20m%C3%A1s%20informaci%C3%B3n%20del%20Plan%20Profesional."  }},
  { name: "Asesoría Digital/Completa", price: "A Medida", popular: false, features: ["Todo el Plan Profesional","Asesoría Fiscal, Laboral y Contable (con nuestro socio)","Asesoramiento Digital Personalizado","Soporte Exclusivo","Tu asesoría moderna y completa"], button: { text: "Elige a medida", link: "https://wa.me/34613139737?text=Hola%21%20estoy%20interesado%20en%20conocer%20m%C3%A1s%20informaci%C3%B3n%20del%20plan%20de%20Asesor%C3%ADa%20Digital."  }},
];

// --- DATOS PARA LA SECCIÓN DE CARACTERÍSTICAS ---
const featureOne = { title: "Fichaje Centralizado y Sencillo", description: "Instalamos nuestra app en una tablet en tu centro de trabajo (o en el smartphone de cada trabajador). Con un simple PIN personal, el registro es rápido, intuitivo y sin errores.", icon: "tabler:device-tablet-pin", image: fichajeImage };
const featureTwo = { title: "Instalación y Soporte Personalizado", description: "No te dejamos solo. Nos desplazamos a tu negocio en Cádiz, configuramos todo por ti y formamos a tu equipo. Tu tranquilidad es nuestro objetivo.", icon: "tabler:headset", image: instalacionImage };
const otherFeatures = [
 { title: "Informes Listos para Inspección", description: "Genera con un solo clic informes mensuales válidos legalmente, listos para cualquier inspección de trabajo.", icon: "tabler:file-analytics" },
 { title: "Portal del Empleado", description: "Cada trabajador tiene acceso a su propio historial de fichajes, solicitudes de vacaciones y calendario.", icon: "tabler:user-circle" },
 { title: "Gestión de Ausencias", description: "Digitaliza el proceso. Recibe, aprueba o rechaza solicitudes de vacaciones y ausencias desde tu panel.", icon: "tabler:calendar-time" },
 { title: "Acceso Seguro y RGPD", description: "Tu información está segura en la nube de Google. Tratamos todos los datos cumpliendo con el RGPD y te damos acceso a tu panel desde cualquier lugar.", icon: "tabler:cloud-lock" },
];

// --- DATOS PARA LA NUEVA SECCIÓN "CUMPLE CON LA LEY" ---
const legalPoints = [
    { title: "100% Digital e Inalterable", text: "Nuestro sistema es puramente digital, fiable y no modificable, eliminando el papel y Excel como exige la nueva normativa.", icon: "tabler:device-desktop-check" },
    { title: "Acceso para la Inspección", text: "Generamos informes compatibles y preparados para el acceso remoto y en tiempo real de la Inspección de Trabajo y Seguridad Social (ITSS).", icon: "tabler:file-search" },
    { title: "Conservación de 4 Años", text: "Guardamos todos los registros de forma segura durante los 4 años que marca la ley, para que no tengas que preocuparte por nada.", icon: "tabler:archive" },
       { title: "Para Todas las Empresas", text: "Nuestra solución es universal y se adapta a cualquier PYME o autónomo con, al menos, un trabajador a su cargo.", icon: "tabler:building-community" },
];
---

<Layout title="tictacdicta - Cumple con la Ley de Registro Horario en Cádiz ">
  <Container>

    <main class="relative text-center overflow-hidden py-20 md:py-28">
      <div class="absolute inset-0 z-0 pointer-events-none">
        <Picture src={heroImage} alt="Trabajador usando tictacdicta" class="w-full h-full object-cover opacity-25" widths={[800, 1200, 1600]} sizes="100vw" loading="eager" format="avif"/>
      </div>
      <div class="relative z-10 max-w-4xl mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-brand-blue-dark">
          El Registro Horario Digital, <span class="text-brand-blue">hecho fácil</span> para tu PYME.
        </h1>
        <p class="text-lg md:text-xl mt-6 text-slate-700 max-w-2xl mx-auto">
          Nos encargamos de todo. Instalamos y configuramos el sistema en tu empresa para que cumplas con la ley sin perder un minuto.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#pricing" class="inline-block px-6 py-3 text-lg font-semibold rounded-lg bg-brand-blue hover:bg-brand-blue/90 text-white transition-colors">
            Ver Planes
          </a>
          <a href="https://wa.me/34613139737" target="_blank" rel="noopener" class="inline-flex items-center justify-center gap-2 px-6 py-3 text-lg font-semibold rounded-lg bg-green-500 text-white hover:bg-green-600 transition-colors">
            <Icon class="w-5 h-5" name="ic:baseline-whatsapp" /> Contacta por WhatsApp
          </a>
        </div>
      </div>
    </main>

    <div class="my-16 md:my-24 py-16 md:py-24 bg-slate-50 rounded-lg" id="ley">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-brand-blue-dark">
          Cumple con la Nueva Ley de Registro Horario. Sin Complicaciones.
        </h2>
        <p class="text-lg mt-4 text-slate-600">
          A partir de 2026, la normativa (evolución del R.D.-ley 8/2019) exigirá un sistema de fichaje digital a todas las empresas. Te explicamos los puntos clave y cómo `tictacdicta` te garantiza el cumplimiento.
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-x-8 gap-y-10 max-w-4xl mx-auto mt-16">
        {legalPoints.map((item) => (
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-brand-blue text-white rounded-lg p-2 shrink-0">
              <Icon class="w-6 h-6" name={item.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-lg text-brand-blue-dark">{item.title}</h3>
              <p class="text-slate-500 mt-1">{item.text}</p>
            </div>
          </div>
        ))}
      </div>
      <div class="mt-12 max-w-3xl mx-auto border-t-2 border-amber-500/50 pt-6 text-center">
        <h3 class="font-bold text-xl text-brand-blue-dark flex items-center justify-center gap-2">
            <Icon name="tabler:alert-triangle" class="w-6 h-6 text-amber-500"/>
            No te la juegues: evita sanciones
        </h3>
        <p class="text-slate-600 mt-2">
            El incumplimiento de esta obligación se considera una infracción grave, con sanciones que pueden ir desde los 751€ hasta los 7.500€.
        </p>
      </div>
    </div>
    
    <div class="my-16 md:my-24" id="features">
  <div class="text-center max-w-3xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-brand-blue-dark">
      Un servicio completo, no solo un software
    </h2>
    <p class="text-lg mt-4 text-slate-600">
      Te damos el control y la tranquilidad que necesitas para gestionar a tu equipo y cumplir con la normativa.
    </p>
  </div>

  <div class="space-y-16 mt-16">
    <div class="grid md:grid-cols-2 gap-10 items-center">
      <div class="order-1">
        <div class="bg-slate-50 p-8 rounded-lg">
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-brand-blue text-white rounded-lg p-2 shrink-0">
              <Icon class="w-6 h-6" name={featureOne.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-xl text-brand-blue-dark">{featureOne.title}</h3>
              <p class="text-slate-500 mt-2 leading-relaxed text-lg">{featureOne.description}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="order-2">
        <Picture src={featureOne.image} alt={featureOne.title} class="rounded-lg shadow-lg" widths={[400, 800]} sizes="(max-width: 800px) 100vw, 800px" />
      </div>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 mt-16 gap-8">
      {otherFeatures.map((item) => (
        // CAMBIO: Fondo gris claro, sin sombras ni efectos hover
        <div class="bg-slate-50 p-6 rounded-lg text-center">
          <div class="bg-brand-blue text-white rounded-lg p-2 w-10 h-10 inline-block">
            <Icon class="w-6 h-6" name={item.icon} />
          </div>
          <h3 class="font-semibold text-lg text-brand-blue-dark mt-4">{item.title}</h3>
          <p class="text-slate-500 mt-2 text-sm">{item.description}</p>
        </div>
      ))}
    </div>

     <div class="grid md:grid-cols-2 gap-10 items-center">
      <div class="order-1">
        <div class="bg-slate-50 p-8 rounded-lg">
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-brand-blue text-white rounded-lg p-2 shrink-0">
              <Icon class="w-6 h-6" name={featureTwo.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-xl text-brand-blue-dark">{featureTwo.title}</h3>
              <p class="text-slate-500 mt-2 leading-relaxed text-lg">{featureTwo.description}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="order-2 md:order-first">
        <Picture src={featureTwo.image} alt={featureTwo.title} class="rounded-lg shadow-lg" widths={[400, 800]} sizes="(max-width: 800px) 100vw, 800px" />
      </div>
    </div>
  </div>
</div>

